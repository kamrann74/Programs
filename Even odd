#include <stdio.h> 

 int main() 

 { 

         int a; 

         printf("Enter an integer\n"); 

         scanf("%d",&a); 

          if(a%2==0) 

         { 

                 printf("The given integer is Even"); 

                  

         } 

         else 

         printf("The given integer is odd"); 

         return 0; 

                  

 }
